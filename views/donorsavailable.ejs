<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Styles -->
  <link rel="stylesheet" href="styles.css">
  <link rel="stylesheet" href="stylesblooddonors.css">
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Oleo+Script:wght@400;700&family=Radio+Canada&display=swap" rel="stylesheet">
    <title>Available Blood</title>
</head>
<body>

    <div class="container availabledonors display_con">
         <h1>Donors Available for <%=recepient%> </h1>


         <!-- Table to display the results -->


         <table class="table">
          <thead>
              <tr>
                  <th scope="col">Id No</th>
                  <th scope="col">First Name</th>
                  <th scope="col">Last Name</th>
                  <th scope="col">Blood Type</th>
                  <th scope="col">Address</th>
                  <th scope="col">Email</th>
                  <th scope="col">Mobile Number</th>
                  <th scope="col">Age</th>
              </tr>
          </thead>
  
          <tbody>

             
              <%  if (donorData.length != 0) {  %> 
                <%   var i = 1; %> 
             <%   donorData.forEach(data => { %> 
             

            <tr>
                      <th scope="row"><%= data.donorID %> </th>
                      <td> <%=data.firstName %> </td>
                      <td> <%=data.lastName %> </td>
                      <td> <%=data.bloodType %> </td>
                      <td> <%=data.address %> </td>
                      <td> <%=data.email %> </td>
                      <td> <%=data.phone %> </td>
                      <td> <%=data.age %> </td>  
                  </tr>

              <% i++; }); %>
             <%  } else { %>
                <tr>
                  <td colspan="7"> No Donors Found </td>
                  </tr>
            <%  } %>
              
          </tbody>
      </table>
    </div>

    
</body>
</html>